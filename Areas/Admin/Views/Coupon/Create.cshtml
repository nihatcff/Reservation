@model CouponVm

<div class="container">
    <div class="row">
        <form method="post" asp-action="Create" asp-controller="Coupon">


            <div class="form-group">
                <label for="title">Title</label>
                <input asp-for="Title" class="form-control" id="title" placeholder="Title">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label for="ExpireDate">ExpireDate</label>
                <input asp-for="ExpireDate" class="form-control" id="ExpireDate" placeholder="ExpireDate">
                <span class="text-danger" asp-validation-for="ExpireDate"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>

        </form>
    </div>
</div>